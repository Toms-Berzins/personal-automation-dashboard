# ============================================
# FIRECRAWL API CONFIGURATION
# ============================================
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_API_URL=https://api.firecrawl.dev

# ============================================
# SEARCH API CONFIGURATION
# ============================================
# Brave Search API (https://brave.com/search/api/)
# Get your API key from: https://api.search.brave.com/register
BRAVE_API_KEY=your_brave_search_api_key_here

# Exa AI Search API (https://exa.ai/)
# Get your API key from: https://dashboard.exa.ai/
EXA_API_KEY=your_exa_api_key_here

# ============================================
# OPENAI API CONFIGURATION
# ============================================
# OpenAI API for AI-powered analytics features
# Get your API key from: https://platform.openai.com/api-keys
# Model documentation: https://platform.openai.com/docs/models
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here  # Optional - only if using organizations

# Available models (as of Jan 2025):
# - gpt-5-nano: Fastest, most cost-efficient ($0.05 per 1M tokens) ‚≠ê RECOMMENDED
# - gpt-5-mini: Cost-efficient ($0.25 input / $2.50 output per 1M tokens)
# - gpt-5: Flagship model for coding/agentic tasks ($1.25 input / $10 output per 1M tokens)
# - gpt-5-pro: Smarter and more precise responses
OPENAI_MODEL=gpt-5-nano

# ============================================
# DATABASE CONFIGURATION - PostgreSQL (Recommended)
# ============================================
# PostgreSQL connection (used by Docker Compose)
POSTGRES_DB=automation_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# Backend database connection (used by Node.js)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=automation_db
DB_USER=postgres
DB_PASSWORD=changeme_in_production

# Full connection string for application
DATABASE_URL=postgresql://postgres:changeme_in_production@localhost:5432/automation_db

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================
# BACKEND API CONFIGURATION
# ============================================
BACKEND_PORT=8000
NODE_ENV=development

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# ============================================
# PGADMIN CONFIGURATION (Development Only)
# ============================================
PGADMIN_EMAIL=admin@automation-dashboard.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# MCP GATEWAY CONFIGURATION (Optional)
# ============================================
MCP_PORT=11434

# ============================================
# n8n CONFIGURATION (Optional)
# ============================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/
N8N_PASSWORD=secure_password_here

# ============================================
# ALERT CONFIGURATION (Email Notifications)
# ============================================
ALERT_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# SCRAPING SCHEDULES (Cron Format)
# ============================================
# Granules Tracker: Daily at 6:00 AM
SCRAPE_SCHEDULE_GRANULES=0 6 * * *

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
DEBUG=app:*
